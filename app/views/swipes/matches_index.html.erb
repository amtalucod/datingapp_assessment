<% provide(:title, "Swipe") %>

<h1>All Matches</h1>


<table class="table table-hover table-bordered">
    <thead class="table-danger">
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Matches</th>
      </tr>
    </thead>
    
    <tbody>
        <% @matches.each do |matched_user| %>
          <tr>
            <td><%= matched_user.first_name %></td>
            <td><%= matched_user.last_name %></td>
            <td><%= matched_user[:match_count] %></td>
        <% end %>
      <% end %>
    </tbody>
</table>
