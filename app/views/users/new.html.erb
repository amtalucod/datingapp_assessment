<% provide(:title, 'Sign up') %>
<div class="card">
  <h5 class="card-header">Sign up</h5>
    <div class="card-body">
      <%= form_with(model: @user, local: true, html: { multipart: true }) do |f| %>
        
        <% if @user.errors.any? %>
          <div style="color: red">
            <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

            <ul>
              <% @user.errors.each do |error| %>
                <li><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        
        
        <div class="field form-group">
          <% f.label :first_name %><br />
          <%= f.text_field :first_name, autofocus: true, autocomplete: "first-name", class:"form-control", placeholder:"First Name" %>
        </div>
        
        <div class="field form-group">
          <% f.label :last_name %><br />
          <%= f.text_field :last_name, autofocus: true, autocomplete: "last-name", class:"form-control", placeholder:"Last Name" %>
        </div>
        
        <div class="field form-group">
          <% f.label :mobile_number %><br />
          <%= f.text_field :mobile_number, autofocus: true, autocomplete: "mobile-number", class:"form-control", placeholder:"Mobile Number" %>
        </div>
        
        <div class="field form-group">
          <% f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", placeholder:"Email" %>
        </div></br>
        
        <div class="field form-group">
          <%= f.label :birthdate %><br />
          <%= f.date_field :birthdate, autofocus: true, autocomplete: "birthdate", class:"form-control", placeholder:"Birthdate" %>
        </div>
        
        <br/>
        <div class="field form-group">
          <%= f.label :gender %><br />
          <%= f.select :gender, [['Male', 'male'], ['Female', 'female']], { prompt: 'Select gender' }, class: "form-control" %>
        </div>
        
        <div class="field form-group">
          <% f.label :sexual_orientation %><br />
          <%= f.text_field :sexual_orientation, autofocus: true, autocomplete: "sexual-orientation", class: "form-control", placeholder: "Sexual Orientation" %><br />
        </div>
        
        <div class="field form-group">
          <%= f.label :gender_interest %><br />
          <%= f.select :gender_interest, [['Male', 'male'], ['Female', 'female']], { prompt: 'Select gender' }, class: "form-control" %>
        </div>
        <br/>
        
        <%= f.fields_for :location_attributes do |l| %>
        <%#= f.fields_for :location, resource.location || resource.build_location do |l| %>
          <%= l.label :country %>
          <%= l.text_field :country, autofocus: true, autocomplete: "country", class: "form-control", placeholder: "Country" %>
          
          <%= l.label :state_region %>
          <%= l.text_field :state_region, class: "form-control", placeholder: "State/Region" %>
          
          <%= l.label :city %>
          <%= l.text_field :city, class: "form-control", placeholder: "City" %>
        <% end %>
        
        

        <div class="field form-group"><br />
          <% f.label :school %>
          <%= f.text_field :school, autofocus: true, autocomplete: "school", class: "form-control", placeholder: "School" %><br />
        </div>

        <div class="field form-group">
          <% f.label :bio %>
          <%= f.text_area :bio, autofocus: true, autocomplete: "bio", class: "form-control", placeholder: "Bio" %><br />
        </div>
               
        <div class="field form-group">
          <% f.label :password %>
          <% if @minimum_password_length %>
          
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password", class:"form-control", placeholder:"Password (6 characters minimum)" %>
        </div>
      
        <div class="field form-group">
          <% f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control", placeholder:"Password Confirmation" %>
        </div><br/>
        
        
        <!-- Image upload fields -->
        <div class="field">
          <%= f.label :photos, "Profile Image (1 photo required, 5 photos max)" %> <br/>
          <%= f.file_field :photos, multiple: true %>
        </div>
        
        
        </br>
        <div class="actions">
          <%= f.submit "Sign up", class:"btn btn-success" %>
        </div>
        
      <% end %>
    </br>
    
  
  </div>
</div>
