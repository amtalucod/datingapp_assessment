<% provide(:title, 'All users') %>
<h1>All users</h1>

<%= will_paginate %>


<ul class="users">
    <% @users.each do |user| %>
        <li>
            <%= gravatar_for user, size: 50 %>
            <%= link_to user.name, user %>
                <% if current_user.admin? && !current_user?(user) %>
                          |  <%= button_to "Delete User", user, method: :delete,
                                     data: { confirm: "You sure?" }, id: "deleteButton"  %>
                            | <%= button_to "My Booking", bookings_path(current_user) %>
                <% end %>
        </li>
    <% end %>
</ul>

<%= will_paginate %>